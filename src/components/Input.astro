---
// May need to make Input.astro account for variable widths in some situations.
export interface Props {
    placeholder: string,
    width: string,
    padding?: string,
    type?: string,
    height?: string,
    styles?: string,
}

const {
    placeholder = '',
    width = 'w-96',
    padding = 'pl-4',
    type = 'text',
    height = 'h-[52px]',
    styles = ''
} = Astro.props;

const BASE_WRAPPER_STYLES = `relative ${height} ${width}`
const BASE_INPUT_STYLES = `
    h-full
    w-full 
    ${padding} 
    outline-none 
    border 
    border-solid 
    border-purple-100 
    box-border 
    rounded-lg
    ${styles}
    hover:border-none
    hover:shadow-input
    focus:border-none
    focus:shadow-input-double
    disabled:bg-gray
    disabled:text-[#83d7d8]
    disabled:border-none
`
---

<div class={BASE_WRAPPER_STYLES}>
    <input class={BASE_INPUT_STYLES} type={type} placeholder={placeholder}>
    <slot></slot>
</div>
